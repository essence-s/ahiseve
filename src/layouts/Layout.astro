---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "@fontsource/poppins";
import Toast from "@/components/Toast.astro";
// import { ViewTransitions } from "astro:transitions";
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- <ViewTransitions /> -->
	</head>
	<body>
		<slot />
		<Toast />
		<style is:global>
			:root {
				--primary-color: #cd2a48;
				--secondary-color: #f7dc6d;
				--accent-color: #1b1a25;
				--text-primary: #ececec;
				--text-secondary: #0e0e0e;
				--bg-primary: #133a4a;
				--list-primary: #f7dc6d;
				--list-secondary: rgb(43, 41, 58);

				--border-color: #ffffff12;
				--link-color: #2150a8;
				--disabled-color: #474747;
				--circle-dash: #f1d84b52;

				/* Tipografy */
				--font-family: "Poppins";
				--font-size-default: 0.8rem;
				--font-size-large: 1rem;
				--font-size-small: 0.69rem;
				--line-height: 1;

				/* Space Size */
				--spacing-unit: #000000;
				--border-radius: 15px;
				--border-radius-secondary: 10px;

				/* Shadows */
				--box-shadow: 5px 5px 5px 0px #00000030;

				--border1px: solid 1px var(--border-color);
			}
			* {
				box-sizing: border-box;
				-webkit-tap-highlight-color: transparent;

				tap-highlight-color: transparent;
			}
			html {
				background: #21282b;
			}
			body {
				background: radial-gradient(
					#452d4f 0%,
					#21282b 37%,
					#1c1c23 72%
				);
				color: white;
				font-family: var(--font-family), sans-serif;
				font-size: var(--font-size-default);
				line-height: var(--line-height);
				margin: 0;
				padding: 0;
			}

			h1 {
				font-size: 16px;
				/* font-family: sans-serif; */
			}

			*::-webkit-scrollbar {
				width: 6px;
			}

			*::-webkit-scrollbar-track {
				background: #23272c;
				border-radius: 15px;
				padding: 3px;
			}

			*::-webkit-scrollbar-thumb {
				background: #55555e;
				border-radius: 15px;
				border: solid 1px #ffffff10;
			}
		</style>
	</body>
</html>
